<Head>:
    canvas:
        Color:
            rgba: 1,0,0,0.5
        Rectangle:
            size: self.size
            pos: self.pos

<Body>:
    canvas:
        Color:
            rgba: 0,1,0,0.5
        Rectangle:
            size: self.size
            pos: self.pos

<Fruit>:
    canvas:
        Color:
            rgba: 0,0,1,1
        Ellipse:
            pos: self.pos
            size: self.size

<Button>: 
    font_size: 40
      
    # creating button 
    # a button 30 % of the width and 30 % 
    # of the height of the layout  
    size_hint: 0.3, 0.3
    
<PlayField>:
    game_view: snake_box
    score_label: score_label
    size: root.size
    orientation: 'vertical'
        

    FloatLayout:
        id: snake_box
        pos_hint: {"x":0, "top":1.0}            
        size_hint_y: root.width
        size_hint_x: 1.0
        canvas:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    FloatLayout:
        id: game_pad
        pos_hint: {"x":0, "y":0}
        size_hint_y: root.height - root.width
        size_hint_x: 1.0

        Button:
            id: up_button 
            text: "up"
            background_color: 0.1, 0.5, 0.6, 1
            pos_hint: {"center_x":0.5, "top":1.0}
            on_press: root.move_snake("up")
            
        Button:
            id: down_button 
            text:"down"
            background_color: 0.4, 0.5, 0.6, 1
            pos_hint: {"center_x":0.5, "bottom":0}
            on_press: root.move_snake("down") 

        Button:
            id: left_button 
            text:"left"
            background_color: 0, 0, 1, 1
            pos_hint: {"x":0.0, "center_y":0.5}
            on_press: root.move_snake("left") 

        Button: 
            id: right_button
            text:"right"
            background_color: 0.8, 0.9, 0.2, 1
            pos_hint: {"right":1.0, "center_y":0.5}
            on_press: root.move_snake("right")
        Label:
            id: score_label
            text:'0'
            font_size: 40
            color: 1, 1, 0, 1
            pos_hint: {"center_x":0.5, "center_y":0.5}
   